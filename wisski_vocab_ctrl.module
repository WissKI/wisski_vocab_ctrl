*/
function wisski_log() {
  $args = func_get_args();
  foreach ($args as $arg) {
    file_put_contents("/tmp/mswisski.log", "[" . date(DATE_ISO8601) . "] " . print_r($arg,true) . "\n", FILE_APPEND);
  }
}
  


